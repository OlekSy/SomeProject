<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.ControllerRegistrationScreen">
  <children>
    <TextField fx:id="username" maxWidth="-Infinity" prefWidth="200.0">
      <StackPane.margin>
        <Insets top="-90.0" />
      </StackPane.margin>
    </TextField>
    <PasswordField fx:id="password" maxWidth="-Infinity" prefWidth="200.0">
      <StackPane.margin>
        <Insets top="-30.0" />
      </StackPane.margin>
    </PasswordField>
    <PasswordField fx:id="repeat" maxWidth="-Infinity" prefWidth="200.0">
      <StackPane.margin>
        <Insets top="30.0" />
      </StackPane.margin>
    </PasswordField>
    <Button mnemonicParsing="false" text="Register Me!">
      <StackPane.margin>
        <Insets top="100.0" />
      </StackPane.margin>
    </Button>
    <Label text="Username">
      <StackPane.margin>
        <Insets right="280.0" top="-90.0" />
      </StackPane.margin>
    </Label>
    <Label text="Password">
      <StackPane.margin>
        <Insets right="280.0" top="-30.0" />
      </StackPane.margin>
    </Label>
    <Label text="Repeat">
      <StackPane.margin>
        <Insets right="280.0" top="30.0" />
      </StackPane.margin>
    </Label>
    <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" text="Back">
      <StackPane.margin>
        <Insets top="160.0" />
      </StackPane.margin>
    </Button>
  </children>
</StackPane>
